<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp"
    tools:context=".TestJsonParse"
    android:orientation="vertical"
    android:layout_gravity="center"

    android:id="@+id/layout"
    >
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center">

    <Button
        android:id="@+id/btnGruppen"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/backStat"
        android:layout_margin="4dp"
        android:text="@string/btnGruppen"
        android:drawableTop="@drawable/pic_gruppen"
        >

    </Button>
    <Button
        android:id="@+id/btnTippen"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/backStat"
        android:layout_margin="4dp"
        android:text="@string/btnTippen"
        android:drawableTop="@drawable/pic_tippen">

    </Button>

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnStatistik"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/backStat"
            android:layout_margin="4dp"
            android:text="@string/btnStatistik"
            android:drawableTop="@drawable/pic_statistik"
            >

        </Button>
        <Button
            android:id="@+id/btnSport"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/backStat"
            android:layout_margin="4dp"
            android:text="@string/btnSport"
            android:drawableTop="@drawable/pic_sport">

        </Button>

    </LinearLayout>




</LinearLayout>


